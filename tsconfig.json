{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "outDir": "./dist"
    },
    "include": [
        "src",
        "config.ts",
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}